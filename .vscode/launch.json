{
    "version": "0.2.0",
    "configurations": [
        {
            "showDevDebugOutput": "raw",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "request": "launch",
            "name": "OpenOCD Debug",
            "servertype": "openocd",
            "executable": "${workspaceFolder}/build/Test.elf",
            "runToEntryPoint": "main",
            "device": "STM32F407",
            // "configFiles": [
            //     "interface/stlink-v2.cfg",
            //     // "interface/cmsis-dap.cfg",
            //     // "interface/daplink-swd.cfg",
            //     "target/stm32f4x.cfg"
            // ],
            // "searchDir": [
            //     "/usr/share/openocd/scripts"
            // ],
            "configFiles": [
                "/usr/share/openocd/scripts/interface/stlink-v2.cfg",
                "/usr/share/openocd/scripts/target/stm32f4x.cfg"
            ],
            "serverArgs": [
                "-c", "adapter_khz 1000"
            ],
            // "svdFile": "${workspaceRoot}/STM32F407.svd",  // 可选：添加 SVD 文件用于查看外设寄存器
            // "preLaunchTask": "build",  // 可选：调试前自动编译
        },
        {
            "name": "Attach to STM32F407",
            "type": "cortex-debug",
            "request": "launch",
            "executable": "${workspaceFolder}/build/Test.elf",
            "servertype": "external",
            "gdbTarget": "localhost:3333",
            "device": "STM32F407VG",
            "showDevDebugOutput": "raw",
            "runToEntryPoint": "main"
        }        
    ]
}